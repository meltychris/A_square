<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.study_path.Advanced_Activity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewGPAadvice_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Advise Your TGA"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewGPAadvice_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Required Grade Point to achieve Your TGA:"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textViewGPAadvice_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Calculated Double Number"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_STSK"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView02"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="38dp"
        android:layout_marginTop="21dp"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/A_Square"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageView04"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/imageView02"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView05"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView03"
        android:layout_below="@+id/imageView03"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView03"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView01"
        android:layout_below="@+id/imageView01"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView04"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imageView02"
        android:layout_below="@+id/imageView02"
        android:layout_marginTop="17dp"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/imageView06"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView05"
        android:layout_toRightOf="@+id/imageView01"
        android:clickable="true"
        android:duplicateParentState="true"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>